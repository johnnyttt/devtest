$main_color_black:#000000; //For all text
$bg_color:#f7f7f7; //For Background use 
$main_color_orange:#ff6a00; //For Button, Link, Feature Text use 
$bdr_color_grey:#e3e3e3;  //For Button, Link, Feature Text use
$break_point_large:1500px;
$break_point_medium:750px;
$break_point_small:480px;

body{
  color:$main_color_black;
}
.product-template__container.page-width{
  padding: 0px;
  >.product-single, >.product-single__description{
    padding: 22px;
  }
  @media only screen and (min-width:$break_point_large){
    >.product-single, >.product-single__description{
      padding: 55px;
    }
  }
}

//Header Style - General
#shopify-section-header{
    border-bottom: 1px solid $main_color_black;

    .site-header, .site-header__mobile-nav{
        background-color: $bg_color;
    }
    .site-header__icon svg {
        height: 30px;
        width: 30px;
        vertical-align: middle;
    }
    //When screensize less than 750px
    @media only screen and (max-width: $break_point_medium){
      .site-header__account{
          display:none;
      }
    }
    
}

//Header Style - When theme setting is Logo Align Centre
.site-header.logo--center{
  padding: 10px!important;
  .site-header__logo{
    text-align: center!important;
    a img{
      margin:auto auto;
    }
  }
  ul.site-nav{
      padding-bottom: 0px;
      text-align: left;
      margin: 25px;
      font-weight: 600;
      font-size: 18px;
  }
  form.search-header {
      max-width: 180px;
      .search-header__input {
          outline: none;
          border-color: #949494;
          cursor: auto;
          border-radius: 20px;
          min-height: 38px;
      }
  }
  .site-header__search.site-header__icon{
    display:block;
  }
  @media screen and (max-width: $break_point_medium){
    .site-header__icons{
      padding-right: 2px;
      .site-header__icon{
        padding: 2px;
        form button{
          display:contents;
        }
        form input{
          display:none;
        }
      }
    }
  }

}

//Main Div Style
#MainContent{
    background-color: $bg_color;
}

//Product Page Style
#shopify-section-product-template{
        
        //Left Section: product page, including Images, Thumbnail etc.
        .page-width{
            max-width: 100%;
        }
        .product-single__thumbnail-image {
            border: 2px solid $bdr_color_grey;
        }
        .active-thumb .product-single__thumbnail-image {
            border-color:$main_color_black;
        }
        .full-screen{
          display:none;
        }
        .product-single__description{
          background-color: #ffffff;
        }
        //Left Section: When screensize more than 750px
        @media screen and (min-width: $break_point_medium){
            .product-single__photos {
                padding: 50px;
            }
            .product-single__photo-wrapper{
                max-width: 87.5%!important;
                max-height: initial!important;        
            }
            .thumbnails-wrapper ul{
              display: flex;
              flex-direction: column;
            }
            .product-featured-img{
                max-width: initial!important;
                max-height: initial!important;        
            }
            .product_breadcrumb{
              display:none;
            }
            .full-screen{
              display:block;
              svg{
                width: 22px;
                height: 22px;
                margin-top: 15px;
              }
            }
        }
        //Left Section: When screensize less than 750px
        @media only screen and (max-width: $break_point_medium){
          .product-single__photos {
            display: flex;
            flex-direction: column-reverse;
          }
          .product_breadcrumb{
            font-size: 0.8em;
            padding: 0 21px;
            color:#8c8c8c;
            a{
              color:#8c8c8c;
            }
          }
        }

        //Right Section: product page, including Title, Price, Option etc.
        .product-single__title, .product-subtitle *{
            color:$main_color_black;
        }
        .price__sale {
            color:$main_color_black;
        }
        .wishlist-div{
          position: relative;
          svg{
            max-width: 38px;
            position: absolute;
            right: 15px;
          }
        }
        .product-form__cart-submit:not([disabled]):hover, .product-form__cart-submit:focus {
            border:2px solid $main_color_orange;
            color:$main_color_orange;
            background: #ffffff;
        }
        .product-form__cart-submit{
            background-color:$main_color_orange;
            color:white;
            min-height: 52px; 
        }
        .size-guide{
            text-align: right;
            color:#999999;
            text-decoration: underline;
        }
        .delivery-option{
            padding-left: 5px;
            padding-right: 5px;
            width: 100%;
            margin-bottom: 10px;
            .btn{
              background-color: white;
              color:$main_color_black;
              border:2px solid $main_color_black;
              width: 100%;
            }
            svg{
              vertical-align: middle;
              width: 50px;
              height: 30px;
            }
        }
        //Right Section: Sale Icon

        .price-item__label-new{
            margin: 10px;
            transform: skew(-20deg);
            background: $main_color_orange;
            color: white;
            width: 140px;
            padding: 4px 19px;
            font-size: 1.4em;
            display: table;
            border-radius: 5px;
        }
        .price-item__label-new div{
            transform: skew(20deg);
        }
        .mobile.price-item__label-new{
            display:none;
        }
        //Right Section: When screensize less than 480px
        @media only screen and (max-width: $break_point_medium){
          .desktop.price-item__label-new{
            display:none;
          }
          .mobile.price-item__label-new{
            display: block;
            margin: 10px 28px;
            width: 95px;
            padding: 1px 10px;
            font-size: 1em;
          }

        }

        .product-form-product-template .product-form__item{
            flex:100%;
        }
        .hidden-option{
            display:none;
        }
        .color-option-label{
          border: none;
          background-color: unset;
          padding: 0px;
          min-height: 25px;
          font-weight: 600;
        }
        //Right Section: When screensize more than 1500px
        @media screen and (min-width: $break_point_large){
            .product-single__title {
                font-size: 4rem;            
            }
            .product__price, .featured-product__price {
                font-size: 2.2rem;
            }
        }


}

// Product Page, Tabs content Style
.product-desc-tabs{
    ul.tabs {
      border-bottom: 1px solid #000000;
      display: block;
      margin: 0 0 20px;
      padding: 0;
    }
    ul.tabs li {
      display: block;
      float: left;
      margin-bottom: 0;
      padding: 0px;
      width: auto;
      margin-right: 30px;
    }
    ul.tabs li a {
      display: block;
      line-height: 50px;
      padding: 10px;
      width: auto;
      font-size: 1.3em;
      color: #000000;
      font-weight: 600;
      border-bottom: none;
    }
    ul.tabs li a.active {
      position: relative;
      border-bottom: 4px solid #000000;
      font-weight: 800;
    }

    ul.tabs:before, ul.tabs:after {
      content: " ";
      display: block;
      height: 0;
      overflow: hidden;
      visibility: hidden;
      width: 0;
    }
    ul.tabs:after {
      clear: both;
    }
    @media screen and (max-width: $break_point_medium){
      ul.tabs{
        border-bottom: none;
        li{
          width: 100%;
          clear: both;
          border-bottom: 2px solid #f1f1f1;
          a{
            line-height: 30px;
            padding: 10px;
            font-size: 1em;
          }
          a.active{
            border-bottom: 2px solid #000000;
          }
          a:after{
            content:"-";
            float:right;
          }
        }
      }
    }
    
  }



//Product Page, Color Option Selector - Swatches Styles
{% assign width = '50px' %}
{% assign height = '50px' %}
.swatch { 
  margin:1em 0; 
}
/* Label */
.swatch .header {
  margin: 0.5em 0;
}
/* Hide radio buttons.*/
.swatch input { 
  display:none;
}
.swatch label {
  /* Rounded corners */
  -webkit-border-radius:2px;
  -moz-border-radius:2px;
  border-radius:2px;
  /* To give width and height */
  float:left;
  /* Color swatches contain no text so they need to have a width. */
  min-width:{{ width }} !important; 
  height:{{ height }} !important;
  /* No extra spacing between them */
  margin:0;
  /* The border when the button is not selected */
  border:#ccc 1px solid;
  /* Background color */
  background-color:#ddd;
  /* Styling text */
  font-size:13px;
  text-align:center;
  line-height:{{ height }};
  white-space:nowrap;
  text-transform:uppercase;
}
.swatch-element label { 
  padding:0 10px; 
  border-radius: 25px;
  background-size: 82%!important;
  border: 2px solid #c1c1c1;

}
.color.swatch-element label { padding:0; }
/* Styling selected swatch */
/* Slightly raised */
.swatch input:checked + label {
  // -webkit-box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  // -moz-box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  // box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  // border-color:transparent;
  border: 2px solid #3e3e3e;
} 
.swatch .swatch-element {
  float:left;
  -webkit-transform:translateZ(0); /* webkit flicker fix */
  -webkit-font-smoothing:antialiased; /* webkit text rendering fix */
  /* Spacing between buttons */
  margin:0px 10px 10px 0;
  /* To position the sold out graphic and tooltip */
  position:relative;
}
/* Image with the cross in it */
.crossed-out { position:absolute; width:100%; height:100%; left:0; top:0; }
.swatch .swatch-element .crossed-out { display:none; }
.swatch .swatch-element.soldout .crossed-out { display:block; }
.swatch .swatch-element.soldout label {
  filter: alpha(opacity=60); /* internet explorer */
  -khtml-opacity: 0.6;      /* khtml, old safari */
  -moz-opacity: 0.6;       /* mozilla, netscape */
  opacity: 0.6;           /* fx, safari, opera */
}
/* Tooltips */
.swatch .tooltip {
  text-align:center;
  background:gray;
  color:#fff;
  bottom:100%;
  padding: 10px;
  display:block;
  position:absolute;
  width:100px;
  left:{{ width | remove: 'px' | to_number | divided_by: 2 | minus: 50 | plus: 2 }}px;
  margin-bottom:15px;
  /* Make it invisible by default */
  filter:alpha(opacity=0);
  -khtml-opacity: 0;
  -moz-opacity: 0;
  opacity:0;
  visibility:hidden;
  /* Animations */
  -webkit-transform: translateY(10px);
     -moz-transform: translateY(10px);
      -ms-transform: translateY(10px);
       -o-transform: translateY(10px);
          transform: translateY(10px);
  -webkit-transition: all .25s ease-out;
     -moz-transition: all .25s ease-out;
      -ms-transition: all .25s ease-out;
       -o-transition: all .25s ease-out;
          transition: all .25s ease-out;
  -webkit-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
     -moz-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
      -ms-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
       -o-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
          box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
  z-index: 10000;
  -moz-box-sizing:border-box; 
  -webkit-box-sizing:border-box; 
  box-sizing:border-box;
}
.swatch .tooltip:before {
  bottom:-20px;
  content:" ";
  display:block;
  height:20px;
  left:0;
  position:absolute;
  width:100%;
}
/* CSS triangle */
.swatch .tooltip:after {
  border-left:solid transparent 10px;
  border-right:solid transparent 10px;
  border-top:solid gray 10px;
  bottom:-10px;
  content:" ";
  height:0;
  left:50%;
  margin-left:-13px;
  position:absolute;
  width:0;
}
.swatch .swatch-element:hover .tooltip {
  filter:alpha(opacity=100);
  -khtml-opacity:1;
  -moz-opacity:1;
  opacity:1;
  visibility:visible;
  -webkit-transform:translateY(0px);
     -moz-transform:translateY(0px);
      -ms-transform:translateY(0px);
       -o-transform:translateY(0px);
          transform:translateY(0px);
}
.swatch.error {
  background-color:#E8D2D2!important;
  color:#333!important;
  padding:1em;
  border-radius:5px;
}
.swatch.error p {
  margin:0.7em 0;
}
.swatch.error p:first-child {
  margin-top:0;
}
.swatch.error p:last-child {
  margin-bottom:0;
}
.swatch.error code {
  font-family:monospace;
}